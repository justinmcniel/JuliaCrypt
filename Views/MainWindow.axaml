<Window xmlns="https://github.com/avaloniaui"
        xmlns:compilerservices="using:System.Runtime.CompilerServices"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dialogs="using:Avalonia.Dialogs"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utilities="using:Avalonia.Utilities"
        xmlns:viewmodels="using:JuliaCrypt.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="JuliaCrypt.MainWindow"
        x:DataType="viewmodels:MainWindowViewModel"
        xmlns:converters="using:JuliaCrypt.Converters"
        Title="JuliaCrypt">
    <Window.Resources>
		<converters:FileToInputButtonConverter x:Key="FileToInputButtonConverter"/>
		<converters:FileToOutputButtonConverter x:Key="FileToOutputButtonConverter"/>
    </Window.Resources>
    <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Border Height="10" Background="DarkSlateGray" VerticalAlignment="Top" DockPanel.Dock="Top"/>
        <Border Height="10" Background="DarkSlateGray" VerticalAlignment="Bottom" DockPanel.Dock="Bottom"/>
        <Border Width="10" Background="DarkSlateGray" HorizontalAlignment="Left" DockPanel.Dock="Left"/>
        <Border Width="10" Background="DarkSlateGray" HorizontalAlignment="Right"  DockPanel.Dock="Right"/>
        <StackPanel Name="MainPanel" Background="DarkSlateGray" TextElement.Foreground="WhiteSmoke" Spacing="-2">
            <Border Name="InputsBorder" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <StackPanel Name="InputsPanel" Spacing="1" HorizontalAlignment="Stretch">
		            <TextBlock FontWeight="Bold">Inputs/Outputs</TextBlock>
                    <Grid ColumnDefinitions="10,*,120" RowDefinitions="Auto,Auto" Margin="5">
                        <Button Click="InputFileClickHandler" FontWeight="Light"
                                TextElement.Foreground="WhiteSmoke" Background="SlateGray"
                                ToolTip.Tip="Select file to be processed." Name="InputFileButton"
                                Grid.Row="0" Grid.Column="1" 
                                Content="{Binding InputFile, Mode=OneWay, Converter={StaticResource FileToInputButtonConverter}, FallbackValue=Select file to be processed.}">
                            <FlyoutBase.AttachedFlyout>
								<Flyout ShowMode="Transient">
                                    <TextBlock FontWeight="Bold" Text="Please Select a File"/>
                                </Flyout>
                            </FlyoutBase.AttachedFlyout>
                        </Button>
                        <Button Click="OutputFileClickHandler" FontWeight="Light"
                                TextElement.Foreground="WhiteSmoke" Background="SlateGray"
                                ToolTip.Tip="Select file to save the output to." Name="OutputFileButton"
                                Grid.Row="1" Grid.Column="1"
                                Content="{Binding OutputFile, Mode=OneWay, Converter={StaticResource FileToOutputButtonConverter}, FallbackValue=Select Save Destination,}"/>
                        <Button FontWeight="Light" Grid.Row="0" Grid.Column="2" 
                                TextElement.Foreground="WhiteSmoke" Background="SlateGray"
                                ToolTip.Tip="Save the Encryption and Stegonographic settings to a file." Name="SaveSettingsButton"
                                Click="SaveSettings" Content="Save Settings"/>
                        <Button FontWeight="Light" Grid.Row="1" Grid.Column="2" 
                                TextElement.Foreground="WhiteSmoke" Background="SlateGray"
                                ToolTip.Tip="Load the Encryption and Stegonographic settings from a file." Name="LoadSettingsButton"
                                Click="LoadSettings" Content="Load Settings"/>
                    </Grid>
                </StackPanel>
            </Border>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ColumnDefinitions="2*,*" ColumnSpacing="-2" RowSpacing="-2">
                <Grid Name="SettingsPanel" RowDefinitions="*,Auto" ColumnDefinitions="*,*" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                      ColumnSpacing="-2" RowSpacing="-2">
                    <Border BorderBrush="Black" BorderThickness="2" Grid.Row="0" Grid.Column="0"/>
                    <Border BorderBrush="Black" BorderThickness="2" Grid.Row="0" Grid.Column="1"/>
                    <Border BorderBrush="Black" BorderThickness="2" Grid.Row="1" Grid.Column="0"/>
                    <Border BorderBrush="Black" BorderThickness="2" Grid.Row="1" Grid.Column="1"/>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="5" Grid.Row="0" Grid.Column="0">
                        <TextBlock FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center">Encryption Settings</TextBlock>
                        <ComboBox SelectedIndex="0" Name="KeyFamilySelector" 
                                  AutoScrollToSelectedItem="True" SelectionChanged="KeyFamilySelectionChanged"
                                  FontWeight="Light" VerticalAlignment="Center" HorizontalAlignment="Center">
                        </ComboBox>
                        <StackPanel Name="KeySubOptions" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <ComboBox SelectedIndex="0" Name="EncryptionFamilySelector" 
                                  AutoScrollToSelectedItem="True" SelectionChanged="EncryptionFamilySelectionChanged"
                                  FontWeight="Light" VerticalAlignment="Center" HorizontalAlignment="Center">
							<ComboBoxItem>Please Select Encryption Family</ComboBoxItem>
                        </ComboBox>
                        <StackPanel Name="EncryptionSubOptions" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="5" Grid.Row="0" Grid.Column="1">
                        <TextBlock FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center">Steganography Settings</TextBlock>
                        <TextBlock FontWeight="Light" VerticalAlignment="Center" HorizontalAlignment="Center">Steganography Family</TextBlock>
                        <TextBlock FontWeight="Light" VerticalAlignment="Center" HorizontalAlignment="Center">Steganography SubOptions</TextBlock>
                    </StackPanel>
                    <Button FontWeight="Light" Grid.Row="1" Grid.Column="0"
                            TextElement.Foreground="WhiteSmoke" Background="SlateGray"
                            BorderBrush="Black" BorderThickness="2"
                            ToolTip.Tip="Begin Encrypting and Encoding the selected file with the selected settings" Name="EncryptAndEncode"
                            Click="ProcessEncrypt" Content="Encrypt and Encode"
                            HorizontalAlignment="Stretch" VerticalAlignment="Center"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <FlyoutBase.AttachedFlyout>
								<Flyout ShowMode="Transient">
                                    <TextBlock FontWeight="Bold" Text="Not Able to Process with Current Settings"/>
                                </Flyout>
                            </FlyoutBase.AttachedFlyout>
                    </Button>
                    <Button FontWeight="Light" Grid.Row="1" Grid.Column="1"
                            TextElement.Foreground="WhiteSmoke" Background="SlateGray"
                            BorderBrush="Black" BorderThickness="2"
                            ToolTip.Tip="Begin Decrypting and Decoding the selected file with the selected settings" Name="DecryptAndDecode"
                            Click="ProcessDecrypt" Content="Decrypt and Decode"
                            HorizontalAlignment="Stretch" VerticalAlignment="Center"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <FlyoutBase.AttachedFlyout>
								<Flyout ShowMode="Transient">
                                    <TextBlock FontWeight="Bold" Text="Not Able to Process with Current Settings"/>
                                </Flyout>
                            </FlyoutBase.AttachedFlyout>
                    </Button>
                </Grid>
                <Border Name="ImageBorder" BorderBrush="Black" BorderThickness="2"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        Grid.Row="0" Grid.Column="1">
                    <StackPanel Name="ImagePanel" Spacing="5">
                        <Border Height="5"/>
                        <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Center">
                                <Border Width="0" Height="0"/>
                                <TextBlock FontWeight="Light" HorizontalAlignment="Center"
                                           TextAlignment="Center" Width="20" TextWrapping="Wrap" ToolTip.Tip="Vertical Image Center Slider">Image Center Y Slider</TextBlock>
                            <Image Margin="0" Width="200" Height="200" Source="../Assets/BlackSquare.png" ToolTip.Tip="Preview for the image Generator"/>
                        </StackPanel>
                        <TextBlock FontWeight="Light" HorizontalAlignment="Center" ToolTip.Tip="Horizontal image center slider">Image Center X Slider</TextBlock>
                        <TextBlock FontWeight="Light" HorizontalAlignment="Center">Zoom Slider</TextBlock>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
							<TextBlock FontWeight="Light" HorizontalAlignment="Center">Zbox</TextBlock>
							<TextBlock FontWeight="Light" HorizontalAlignment="Center">Xbox</TextBlock>
							<TextBlock FontWeight="Light" HorizontalAlignment="Center">Ybox</TextBlock>
                        </StackPanel>
                        <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="1" Name="GenerationParamaterSeparationBorder"/>
                        <TextBlock FontWeight="Light" HorizontalAlignment="Center">Generation Source DropDown</TextBlock>
                        <TextBlock FontWeight="Light" HorizontalAlignment="Center">Parameter A Slider</TextBlock>
                        <TextBlock FontWeight="Light" HorizontalAlignment="Center">Parameter B Slider</TextBlock>
                        <TextBlock FontWeight="Light" HorizontalAlignment="Center">Parameter C Slider</TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </DockPanel>
</Window>
